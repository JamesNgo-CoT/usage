# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package{,-lock}.json]
indent_style = space
indent_size = 2

[.eslintrc.json]
indent_style = space
indent_size = 4
insert_final_newline = false

[.ejs]
insert_final_newline = false
